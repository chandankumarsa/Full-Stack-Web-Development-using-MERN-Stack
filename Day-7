(homework.html)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <table border="1">
        <thead>
            <tr>
                <td rowspan="3">Day</td>
                <td colspan3>Seminar</td>
            </tr>
            <tr>
                <td colspan="2">Schedule</td>
                <td rowspan="2">Topic</td>
            </tr>
            <tr>
                <td>Begin</td>
                <td>End</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td rowspan="2">
                    Monday
                </td>
                <td rowspan="2">8:00am</td>
                <td rowspan="2">5:00Pm</td>
                <td>Introduction to xml</td>
            </tr>
            <tr>
                <td>Validity DTD and Relax NG</td>
            </tr>
            <tr>
                <td rowspan="3">Tueseday</td>
                <td>8:00 a.m</td>
                <td>11:00 a.m</td>
                <td rowspan="2">Xpath</td>
            </tr>
            <tr>
                <td>11:00 am</td>
                <td>2:00 pm</td>
            </tr>
            <tr>
                <td>2:00pm</td>
