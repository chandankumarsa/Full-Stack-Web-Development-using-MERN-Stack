(formtwo.html)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>JOB APPLICATION</h2>
    <form>
        <label for="name">Name</label>
        <input type="text" name="name" id="name">
        <br>
        <br>
        <label for="Email id">Email id</label>
        <input type="text" name="Email" id="Email id">
        <br>
        <br>
        <label for="Phone">Phone</label>
        <input type="tele" name="phone" id="phone">
        <br>
        <br>
        <label for="file">Resume</label>
        <input type="file" name="file" id="file">
        <br><br>
        <label for="num">Experience(in year)</label>
        <input type="number" name="num" id="num" min="0" max="50">
        <br><br>
        <fieldset>
            <legend>
                <label for="skill">Skills</label>
            </legend>
            <label for="html">HTML</label>
                <input type="checkbox" name="html" id="html">
                <label for="CSS">CSS</label>
                <input type="checkbox" name="CSS" id="CSS">
                <label for="JAVASCRIPT"> JAVA-SCRIPT</label>
                <input type="checkbox" name="javascript" id="JAVASCRIPT">
        </fieldset> 
        <br>
        <br>
        <fieldset>
            <legend>
                <label for="avail">Availability</label>
            </legend>
            <br>
        
        <input type="radio" name="full" id="full" value="Full Time">
        <label for="full">Full Time</label>
        <br>
        <input type="radio" name="'part" id="part" value="Part Time">
        <label for="part">Part Time</label>
        </fieldset>
        <br>
        <br>
        <label for="high">Highest Qualification</label>
        <select name="high" id="high">
            <option value="high school">HIGH SCHOOL</option>
            <option value="+2">+2</option>
            <option value="MCA">MCA</option>
            <option value="PHD">PHD</option>
        </select>
        <br>
        <br>
        <label for="add">Additional Comment</label>
        <br>
        <textarea name="Additional Comment" id="add" cols="30" rows="10"></textarea>
        <button>Submit Application</button>

    </form>
</body>
</html>
