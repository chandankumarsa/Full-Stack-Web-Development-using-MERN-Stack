(one.html)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
   <fieldset>
    <!-- <legend>html form dummy</legend> -->
    <form>
        <label for="date picker"> Date </label>
        <input type="date" id="date picker">
        <br>
        <br>
        <label for="choose your dish">Choose your Dish</label>
        <select name="dishes" id="choose your dish">
        <option value="maggie">maggie</option>
        <option value="coffee">coffee</option>
        <option value="tea">tea</option>
    </select>
    <br>
    <br>
    <button>Main Hu Button</button>
    <br>
    <br>
    <textarea name="text" id="text" cols="30" rows="10">Enter text here ...</textarea>
    </form>
   </fieldset>
</body>
</html>

